contract InteractionRegistry is Context,ReentrancyGuard {

    // SafeMath library no longer being used from solidity 0.8
    // Ref: https://docs.soliditylang.org/en/v0.8.11/080-breaking-changes.html

    mapping(address => uint256) private _credits;

    uint256 _costPerCreditInWei = 1 * 10 **16;

    event creditAdded(address indexed accountAddress, uint256 credits);
    event creditRemoved(address indexed accountAddress, uint256 credits);
    event interactionCOmpleted(
        // address indexed senderAdress, 
        address indexed receiverAddress,
        address indexed sendingAppAddress, address indexed receivingAppAddress
        );

    /**
     * Empty constructor
     */
    constructor() {}

    /**
     * @dev Function is reentrance secured as it manages onchain credit balances.
     * 
     * Function to add credits to an address
     * 
     * @param numCredits Number of credits to buy
     */
    function addCredit(uint256 numCredits) public nonReentrant payable {
        uint256 weiAmount = msg.value;
        require(weiAmount != 0, "Registry: weiAmount is 0");
        require(numCredits != 0, "Registry: numCredits is 0" );

        // Check if enough ETH is supplid in for given credits 
        require(numCredits * _costPerCreditInWei == weiAmount, "Registry: Cost per credit mismatched with funds sent");

        _credits[_msgSender()] += numCredits;
        emit creditAdded(_msgSender(), numCredits);

    }

    /**
     * @dev Function is reentrance secured as it manages onchain credit balances.
     * 
     * Function to remove Credits and pay base currency token
     * 
     * @param numCredits Number of Credits to be reduced/encashed.
     */
    function removeCredit(uint256 numCredits) public nonReentrant {
        require(numCredits > 0, "Registry: numCredits is 0");

        _credits[_msgSender()] -= numCredits;
        Address.sendValue(payable(_msgSender()), numCredits * _costPerCreditInWei);

        emit creditRemoved(_msgSender(), numCredits);
    }

    /**
     * @dev senderAddress is diabled for now but might be needed in future for delgation calls.
     * Function checks if sendingAppAddress and receivingAppAddress are actually dApp addresses.
     * Function is reentrance secured as it manages onchain credit balances.
     * 
     * submitInteraction: Interaction function that can be called to distribute credts in prdefined ratio
     * 
     * @param receiverAddress The address who will recieve the 50% amount of interaction.
     * @param sendingAppAddress The address who will recieve the 25% amount of interaction.
     * @param receivingAppAddress The address who will recieve the 25% amount of interaction.
     */
    function submitInteraction(
        // address senderAdress, 
        address receiverAddress,
        address sendingAppAddress, 
        address receivingAppAddress
        ) public nonReentrant {
            // Non Zero and contract checks
            // Removing the senderAdress varable for now as unusable
            // require(senderAdress != address(0), "Registry: senderAdress is the zero address");
            require(receiverAddress != address(0), "Registry: senderAdress is the zero address");
            require(Address.isContract(sendingAppAddress), "Registry: sendingAppAddress is not a dApp");
            require(Address.isContract(receivingAppAddress), "Registry: receivingAppAddress is not a dApp");

            require(_credits[_msgSender()] >= 1, "Registry: Not enough credits with sender");
            
            Address.sendValue(payable(sendingAppAddress), _costPerCreditInWei/4);
            Address.sendValue(payable(receivingAppAddress), _costPerCreditInWei/4);
            Address.sendValue(payable(receiverAddress), _costPerCreditInWei/2);

            emit interactionCOmpleted(sendingAppAddress, receivingAppAddress, receiverAddress);
    }

    /**
     * @dev basic virtual view function to check the _costPerCreditInWei
     * 
     * costPerCreditInWei: Check Credit Cost in Wei
     * 
     * @return Returns the amount in wei 
     */
    function costPerCreditInWei() public view virtual returns (uint256) {
        return _costPerCreditInWei;
    }

    /**
     * @dev basic virtual view function to check the balance of an account
     * 
     * balanceCredits: Check Credit Balance for an account
     * 
     * @param account Address of the account whose credist are to be checked.
     * @return Returns the number of credits left in the account. 
     */

    function balanceCredits(address account) public view virtual returns (uint256) {
        return _credits[account];
    }
}
